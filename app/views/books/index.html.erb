<body>
  <h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </tr>
</table>
<h2>New book</h2>
<%= form_with model:@book, url:'/books', local:true do |f|%>
 <div>
   <h4>Title</h4>
   <%= f.text_field :title %>
 </div>

 <div>
   <h4>Body</h4>
   <%= f.text_area :body %>
 </div>

 <div>
   <%= f.submit "Create Book"%>
 </div>
 <% end %>
</body>