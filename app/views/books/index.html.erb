<body>
  <h1>Books</h1>
<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <%= book.title%>
    <%= book.body%>
    <% end %>
  </tobody>


</table>
<h2>New book</h2>
<%= form_with model:@book, url:'/books', local:true do |f|%>
 <div class="field">
   <label>Title</label>
   <%= f.text_field :title %>
 </div>

 <div class="field">
   <label>Body</label>
   <%= f.text_area :body %>
 </div>

 <div class="field">
   <%= f.submit "Create Book"%>
 </div>
 <% end %>
</body>