<p><%= flash[:destroy_data] %></p>
<body>
  <h1>Books</h1>
<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
   <% @books.each do |book| %>
    <tr><td><%= book.title%></td>
    <td><%= book.body%></td>
    <td><%= link_to"Show",book_path(book.id)%></td>
    <td><%= link_to"Edit",edit_book_path(book.id)%></td>
    <td><%= link_to"Destory",book_path(book.id),method: :delete, "data-confirm" => "Are you sure?"%></td></tr>
   <% end %>
  </tbody>

</table>
<h2>New book</h2>
<% if @book.errors.any? %>
 <h2><%= @book.errors.count%> errors prohibited this book from being saved:</h2>
  <% @book.errors.full_messages.each do |message| %>
  <ul>
   <li><%= message %></li>
   </ul>
  <% end %>
<% end %>
<%= form_with model:@book, url:books_path, local:true do |f|%>
 <div class="field">
   <label>Title</label>
   <%= f.text_field :title %>
 </div>

 <div class="field">
   <label>Body</label>
   <%= f.text_area :body %>
 </div>

 <div class="field">
   <%= f.submit "Create Book"%>
 </div>
 <% end %>
</body>